@using CourseResultMVCWebApp.Models

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Save</title>
</head>
<body>
    <div>
        <form method="POST" id="studentForm">
            <legend>Save Student</legend>

           
            <div class="form-group">
                <label for="Name">Name</label>

                <input type="text" class="form-control" id="Name" name="Name"/>
            </div>
            <div class="form-group">
                <label for="Email">Email</label>

                <input type="text" class="form-control" id="Email" name="Email"/>
            </div>
            <div class="form-group">
                <label for="ContactNumber">Contact Number</label>
                <input type="text" class="form-control" id="ContactNumber" name="ContactNumber"/>
            </div>
            <div class="form-group">
                <label for="Date">Date</label>

                <input type="date" class="form-control" id="Date" name="Date" value="1/1/2012"/>
            </div>
            <div class="form-group">
                <label for="Address">Address</label>
                <input type="text" class="form-control" id="Address" name="Address"/>
            </div>
            <div class="form-group">
                <label for="departmentId">Department</label>
                <select id="departmentId" class="form-control" name="departmentId">
                    <option value="">--Select--</option>
                    @foreach (Department department in ViewBag.Departments)
                    {
                        <option value="@department.Id">@department.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success mr-2" value="Register" />
            </div>

        </form>
      <br/>
        <div style="color: green">@ViewBag.Message</div>
        <div>@ViewBag.Student</div>
    </div>
</body>
</html>
@section scripts
{
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
    
    <script>
        $(document).ready(function () {
            $("#studentForm").validate({
                errorClass: 'field-validation-error',
                rules: {
                    Name: "required",
                    Email: {
                        required: true,
                        email: true
                        },
                    Date: "required",
                    departmentId: "required"
                    },
                messages:
            {
                Name: "Please provide a student name",
                Email:
          {
              required: "Please provide an email",
              email: "Provide a correct email"
          },
                Date: "Please select a date",

                departmentId:
                    "Please select a Department from the list",
                }
            });
        });
    </script>
}
